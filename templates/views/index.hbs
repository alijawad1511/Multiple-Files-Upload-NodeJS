{{>header}}
<section class="section my-4">
    <div class="container text-center">
        <div class="title py-5">
            <h1>NodeJS File Uploader</h1>
            <p class="subtitle">Upload Images to <strong>Server</strong></p>
        </div>

        <div class="row justify-content-center">
            <div class="col-6">
                <form action="/upload" method="POST" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-8">
                            <input type="file" name="image" id="formFile" class="form-control" multiple>
                        </div>
                        <div class="col-2">
                            <input type="submit" value="Upload Images" class="btn btn-success">
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-6">
                <p class="error-msg">
                    {{#if msg}}
                    <strong>{{msg}}</strong>
                    {{/if}}
                </p>
            </div>
        </div>

        {{!-- Display Images --}}
        <section class="mt-5">
            <div class="row">
                {{#each images}}
                    {{this}}
                {{/each}}
            </div>
        </section>
    </div>
</section>
{{>footer}}